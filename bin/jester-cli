#!/usr/bin/python

import socket
import re
import sys
import json
from pprint import pprint

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

host = 'localhost'
port = 8888

s.connect((host, port))

input = ""

prompt = "jester@{0}:{1}> ".format(host, port)

c = re.compile('source (.*)')

def send_and_print(input):
    input = input.strip()
    s.send(input + "\n")
    result = s.recv(4096)
    result = result.strip()
    result = json.loads(result)
    pprint(result)

def source(filename):
    print "Loading from " + filename
    with open(filename) as f:
        for line in f:
            print line
            send_and_print(line)

if len(sys.argv) > 1:
    source( sys.argv[1] )
    sys.exit()

while True:

    input = raw_input(prompt)
    if input in ['quit','exit']:
        break

    results = c.findall(input)    

    if results:
        source(results[0])
    else:
        send_and_print(input)
        





